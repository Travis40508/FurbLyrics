<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tressler.travistressler.lyricspal">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.tressler.travistressler.lyricspal.Application.di.LyricsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tressler.travistressler.lyricspal.SplashView.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tressler.travistressler.lyricspal.MainView.MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>